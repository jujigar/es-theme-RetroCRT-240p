<!--
theme name:		RetroCRT-240p
-->

<theme>
    <formatVersion>3</formatVersion>

	<view name="system">
		
     <image name="background" extra="true">
            <tile>false</tile>
            <pos>0.0 0.0</pos>
            <origin>0 0</origin>
            <size>1 1</size>
            <color>0047ab</color>
            <path>./art/systemback.png</path>
        </image>

		<helpsystem name="help">
			<pos>0.012 1.960</pos>
			<textColor>ffc000</textColor>
			<iconColor>ffc000</iconColor>
			<fontPath>./art/Retron2000.ttf</fontPath>
			<fontSize>0.033</fontSize>
		</helpsystem>

		<text name="systemInfo">
			<fontPath>./art/Retron2000.ttf</fontPath>
			<fontSize>0.035</fontSize>
			<color>000000</color>
			<backgroundColor>FFFFFFCC</backgroundColor>
		</text>

	</view>

	<view name="
		detailed,
		video,
		grid
		">
		
		<textlist name="gamelist">
			<pos>0.055 0.05</pos>
			<size>0.46 0.90</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<fontPath>./art/Retron2000.ttf</fontPath>
			<fontSize>0.035</fontSize>
            <forceUppercase>1</forceUppercase>
		</textlist>
		
	    <helpsystem name="help">
			<pos>0.012 1.960</pos>
			<textColor>ffc000</textColor>
			<iconColor>ffc000</iconColor>
			<fontPath>./art/Retron2000.ttf</fontPath>
			<fontSize>0.035</fontSize>
		</helpsystem>


		<image name="md_marquee">
			<origin>0.5 0.5</origin>
			<pos>0.73 0.83</pos>
			<maxSize>0.33 0.15</maxSize>
		</image>

	</view>

	<view name="detailed">
		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.730 0.48</pos>
			<maxSize>0.40 0.50</maxSize>
		</image>
	</view>

	<view name="video">
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.730 0.48</pos>
			<maxSize>0.40 0.50</maxSize>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<delay>3</delay>
			<showSnapshotDelay>true</showSnapshotDelay>
		</video>
	</view>

    <view name="basic">
		<textlist name="gamelist">
            <pos>0.11 0.180</pos>
            <size>0.8 0.775</size>
            <alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
            <forceUppercase>1</forceUppercase>
			<fontPath>./art/Retron2000.ttf</fontPath>
			<fontSize>0.070</fontSize>
        </textlist>
	</view>

  <view name="menu">
    <text name="systemInfo">
      <pos>0.0 0.61</pos>
      <backgroundColor>00000000</backgroundColor>
      <color>ECECEC</color>
      <fontPath>./art/Retron2000.ttf</fontPath>
      <fontSize>0.02</fontSize>
    </text>
    <menuText name="menufooter">
      <fontPath>./art/Retron2000.ttf</fontPath>
      <fontSize>0.02</fontSize>
      <color>777777FF</color>
    </menuText>
    <menuText name="menutext">
      <fontPath>./art/Retron2000.ttf</fontPath>
      <fontSize>0.033</fontSize>
      <color>DFDCDC</color>
      <separatorColor>555555FF</separatorColor>
      <selectorColor>006ca3</selectorColor>
      <selectedColor>FFFFFF</selectedColor>
    </menuText>
    <menuTextSmall name="menutextsmall">
      <fontPath>./art/Retron2000.ttf</fontPath>
      <fontSize>0.02</fontSize>
      <color>deec00</color>
    </menuTextSmall>
    <menuText name="menutitle">
      <fontPath>./art/Retron2000.ttf</fontPath>
      <fontSize>0.037</fontSize>
      <color>DFECFA</color>
    </menuText>
    <menuBackground name="menubg">
      <color>2D2C2C</color>
  <!--    <path>./../main/frame.png</path>
      <fadePath>./main/menuback.png</fadePath>-->
    </menuBackground>
  </view>

</theme>
